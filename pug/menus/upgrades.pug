mixin upgrade(id, price, title, label)
  button.upgrade.disabled(type='button' id=id data-price=price title=title)=label

div.row#upgrades-menu.menu.hidden
  div.col-xs-12
    .line
      +upgrade('upgrade-wood-axe', '5', 'Chop trees faster', 'Upgrade Wood Axe ($5)')
      +upgrade('upgrade-pine-cone', '75', 'Trees drop pine cones more often', 'Upgrade Pine Cone Drop Chance ($75)')
      +upgrade('upgrade-tree-grow', '75', 'Trees grow faster', 'Upgrade Tree Grow Time ($75)')
