{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "import/no-unresolved": [2],
    "semi": 1,
    "no-plusplus": 0,
    "no-prototype-builtins": 0,
    "arrow-parens": [1, "always"],
    "space-before-function-paren": 0,
    "no-use-before-define": 0
  },
  "globals": {
    "phaser": true
  },
  "settings": {
    "import/core-modules": [ "phaser", "pixi", "p2" ]
  }
}
